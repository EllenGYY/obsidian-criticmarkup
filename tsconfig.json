{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "verbatimModuleSyntax": false,
    "strict": true,
    "paths": {
      "src": [
        "src/*",
        "tests/*"
      ]
    },
    "lib": [
      "dom",
      "ESNext"
    ],
    "types": [
      "jest",
      "svelte",
      "node"
    ]
  },
  "files": [
    "node_modules/jest-expect-message/types/index.d.ts"
  ],
  "include": [
    "**/**.ts"
  ]
}
